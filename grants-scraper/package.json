{
  "name": "grants-scraper",
  "version": "1.0.0",
  "description": "Production-ready Grants.gov scraper/ingestor with incremental sync",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "grants-pull": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": ["grants", "grants.gov", "scraper", "data-ingestion"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.7",
    "pino": "^10.0.1",
    "pino-pretty": "^13.0.0",
    "undici": "^7.4.0",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.9.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

